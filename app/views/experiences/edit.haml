= render "layouts/sidebar"
= render "layouts/drawer"
= render "layouts/leniswrapper" do
  = render "layouts/navigationshortcutswrapper" do
    / Including search styles for experience styling
    .dashboard-container
      .dashboard-header-section
        %h1.display-heading= t('.title')
        %p.header-description= t('.subtitle')
      .dashboard-section.welcome-section.mb-4
        %h2.h4.mb-2
          = t('.refining', title: @experience.title)
        %p.text-muted.mb-0= t('.instructions')
      .experience-form-container
        = render "form", experience: @experience
      .actions-section.mt-4.d-flex.justify-content-between
        = link_to display_experience_path(@experience), class: "btn btn-outline-primary" do
          = t('.view_current_experience')
        = link_to experiences_path, class: "btn btn-outline-secondary" do
          = t('.back_to_experiences')
      .dashboard-footer.mt-4
        %small.text-muted
          = sanitize(t('.created_and_updated_html',
                       created_date: @experience.created_at.strftime("%B %d, %Y"),
                       updated_ago:  time_ago_in_words(@experience.updated_at)))
