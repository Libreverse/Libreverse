<%= render "layouts/sidebar" %>
<%= render "layouts/drawer" %>
<%= render 'layouts/leniswrapper' do %>
  <%= render 'layouts/navigationshortcutswrapper' do %>
    <% include_stylesheet "dashboard" %>
    <% include_stylesheet "search" %> <!-- Including search styles for experience styling -->

    <div class="container py-5 dashboard-container">
      <div class="row">
        <div class="col-md-12">
          <div class="card shadow-sm mb-4 dashboard-card">
            <div class="card-header text-white dashboard-header">
              <h1 class="h3 mb-0">Edit Experience</h1>
            </div>
            <div class="card-body p-4">
              <div class="welcome-section mb-4">
                <h2 class="h4 mb-2">Refining "<%= @experience.title %>"</h2>
                <p class="text-muted mb-0">Make changes to your experience below and save when you're ready.</p>
              </div>
              
              <div class="experience-form-container">
                <%= render "form", experience: @experience %>
              </div>
              
              <div class="mt-4 d-flex justify-content-between">
                <%= link_to experience_path(@experience), class: "btn btn-outline-primary" do %>
                  <i class="bi bi-eye me-2"></i> View Current Version
                <% end %>
                
                <%= link_to experiences_path, class: "btn btn-outline-secondary" do %>
                  <i class="bi bi-arrow-left me-2"></i> Back to Experiences
                <% end %>
              </div>
            </div>
            <div class="card-footer p-3">
              <small class="text-muted">
                <i class="bi bi-info-circle me-1"></i>
                This experience was created on <%= @experience.created_at.strftime("%B %d, %Y") %> and last updated 
                <%= time_ago_in_words(@experience.updated_at) %> ago.
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %> 