<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Experiences Pending Approval</h1>

  <% if @experiences.any? %>
    <ul class="space-y-4">
      <% @experiences.each do |experience| %>
        <li class="bg-white shadow rounded-lg p-4 flex items-center justify-between">
          <div>
            <h2 class="text-lg font-semibold"><%= experience.title %></h2>
            <p class="text-sm text-gray-600">Author: <%= experience.author || 'N/A' %></p>
            <p class="text-sm text-gray-600">Submitted by: <%= experience.account&.username || 'Unknown' %> on <%= experience.created_at.to_date %></p>
            <%= link_to "View", experience_display_path(experience), target: "_blank", class: "text-blue-500 hover:underline text-sm" %>
          </div>
          <div>
            <%= button_to "Approve", approve_admin_experience_path(experience), method: :patch, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-700">There are no experiences currently pending approval.</p>
  <% end %>
</div> 