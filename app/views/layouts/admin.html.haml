%header.bg-gray-800.text-white.p-4
  .container.mx-auto
    %h1.text-xl.font-bold Admin Panel
  %main.container.mx-auto.mt-4
    - if flash[:notice]
      .bg-green-100.border.border-green-400.text-green-700.px-4.py-3.rounded.relative.mb-4{role: "alert"}
        %span.block.sm:inline= flash[:notice]
    - if flash[:alert]
      .bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.relative.mb-4{role: "alert"}
        %span.block.sm:inline= flash[:alert]
    = yield
