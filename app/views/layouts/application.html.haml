!!!
- rtl_locales = %w[ar]
%html{ dir: (rtl_locales.include?(I18n.locale.to_s) ? 'rtl' : 'ltr'), lang: I18n.locale.to_s }
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %link{as: "font", crossorigin: "", href: vite_asset_path("~/fonts/Lazer84.woff2").to_s, rel: "preload", type: "font/woff2"}/
    %link{as: "font", crossorigin: "", href: vite_asset_path("~/fonts/Hack-Regular.woff2").to_s, rel: "preload", type: "font/woff2"}/
    %link{as: "font", crossorigin: "", href: vite_asset_path("~/fonts/Hack-Italic.woff2").to_s, rel: "preload", type: "font/woff2"}/
    - if Rails.env.development?
      = vite_stylesheet_tag "stylesheets/application.scss"
      = vite_javascript_tag "javascript/application.js"
    - else
      = inline_vite_stylesheet "stylesheets/application.scss"
      = inline_vite_javascript "javascript/application.js"
      = inline_vite_legacy_javascript "javascript/application.js"
    = render "layouts/development_headers" if Rails.env.development?
    = render "layouts/meta_tags"
    = csrf_meta_tags
    = vite_client_tag
  %body
    .underconstruction
      %span= t('layouts.application.alpha_notice_html').html_safe
    %noscript
      .noscript-message
        .noscript-message__content
          %h1.noscript-message__heading= t('layouts.application.noscript_heading')
          %p.noscript-message__text= t('layouts.application.noscript_message')
    = render "layouts/flash_messages"
    #toast-container
    %main.content-wrapper
      = yield
    = render partial: "layouts/drawer" if page_with_drawer?
