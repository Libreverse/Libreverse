-# Shared assets partial for app and CMS
= vite_client_tag data: { turbo_track: "reload" }
- if Rails.env.development?
  / Use proxied dev paths (vite_rails serves under /vite-dev)
  %link{ rel: "stylesheet", href: "/vite-dev/stylesheets/application.scss" }
  %script{ type: "module", src: "/vite-dev/javascript/application.js" }
  = render "layouts/development_headers"
- elsif Rails.env.production?
  / Use single entrypoint in production
  = inline_vite_stylesheet "~/javascript/application.js"
  = inline_vite_javascript "~/javascript/application.js"
- else
  = vite_stylesheet_tag "~/stylesheets/application.scss", data: { turbo_track: "reload" }
  = vite_javascript_tag "~/javascript/application.js", data: { turbo_track: "reload" }
