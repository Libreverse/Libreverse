svg class="hidden"
  / Dynamic, lightweight glass distortion filter used by CSS via filter: url(#glass-distortion)
  filter#glass-distortion x="-20%" y="-20%" width="140%" height="140%" filterUnits="objectBoundingBox"
    / Generate a soft, animated noise field
    feTurbulence type="fractalNoise" baseFrequency="0.012" numOctaves="2" seed="7" result="noise"
      animate attributeName="baseFrequency" dur="16s" values="0.008;0.018;0.008" repeatCount="indefinite"
    feGaussianBlur in="noise" stdDeviation="1.2" result="softNoise"

    / Optional subtle specular highlight for a glossy feel
    feSpecularLighting in="softNoise" surfaceScale="3" specularConstant="0.75" specularExponent="40" lighting-color="#ffffff" result="spec"
      fePointLight x="-120" y="-160" z="220"
    feComposite in="softNoise" in2="spec" operator="arithmetic" k1="1" k2="0.2" k3="0.2" k4="0" result="heightMap"

    / Displace the element's own graphic (pseudo-element background) using the soft height map
    feDisplacementMap in="SourceGraphic" in2="heightMap" scale="20" xChannelSelector="R" yChannelSelector="G"
