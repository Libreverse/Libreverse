<% content_for :specifcstylesheets do %>
  <%= vite_stylesheet_tag "~/stylesheets/drawer.scss" %>
<% end %>
<aside class="drawer-container" role="complementary" data-controller="drawer">
  <div class="drawer" aria-labelledby="drawer-title">
    <div class="drawer-header">
      <h2 id="drawer-title" class="drawer-title">Attribution</h2>
      <button
        class="drawer-toggle"
        type="button"
        data-action="drawer#toggle"
        aria-label="Toggle drawer"
      >
        <img
          src="<%= vite_asset_path "~/icons/chevron-up.svg" %>"
          class="drawer-icons"
          loading="eager"
          decoding="async"
          fetchpriority="high"
          draggable="false"
          aria-hidden="true"
          tabindex="-1"
          data-drawer-target="icon"
        >
      </button>
    </div>
    <div class="drawer-contents" data-drawer-target="content">
      <div class="drawer-content">
        <p>At Libreverse, we ❤️ projects under open licenses and want to give
          credit to the projects that made libreverse possible.</p>
        <ul>
          <li>
            <a
              href="https://github.com/twitter/twemoji?tab=readme-ov-file"
              class="drawer-link"
            >Twemoji</a>
            by
            <a href="https://x.com" class="drawer-link">X Corp</a>
            licensed under
            <a
              href="https://raw.githubusercontent.com/twitter/twemoji/refs/heads/master/LICENSE-GRAPHICS"
              class="drawer-link"
            >CC-BY-4.0</a>
          </li>
          <li>
            <a href="https://fontawesome.com" class="drawer-link">Fontawesome</a>
            by
            <a href="https://fontawesome.com" class="drawer-link">Fontawesome</a>
            licensed under
            <a href="https://creativecommons.org/licenses/by/4.0/" class="drawer-link">CC-BY-4.0</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</aside>
