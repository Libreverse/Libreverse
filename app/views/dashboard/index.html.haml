= render "layouts/sidebar"
= render "layouts/drawer"
= render "layouts/leniswrapper" do
  = render "layouts/navigationshortcutswrapper" do
    .dashboard-container
      .dashboard-header-section
        %h1.display-heading Dashboard
        %p.header-description
          Welcome,
          \#{@account.username}
      - if rodauth.logged_in? && !tutorial_dismissed?("dashboard-tutorial")
        %div{"data-controller" => "dismissible"}
          #dashboard-tutorial.dashboard-section{"data-dismissible-key-value" => "dashboard-tutorial", "data-dismissible-target" => "container"}
            .section-dismiss
              %button.dismiss-button{"data-action" => "dismissible#dismiss"}
                %img.feather.feather-x{:alt => "Close", "aria-hidden" => "true", :height => "16", :src => "#{svg_icon_data_url('x')}", :width => "16"}/
            %h2.section-heading Your Account
            %p.section-description
              You are logged in to your account dashboard. Manage your account
              settings from here.
      %h3.section-title Account Information
      .info-card
        .info-grid
          .info-item
            .info-label USERNAME
            .info-value= @account.username
          .info-item
            .info-label ACCOUNT CREATED
            .info-value= @account_created_at
          .info-item
            .info-label Account Age
            .info-value= @time_since_joining
          .info-item
            .info-label LAST LOGIN
            .info-value= @last_login_at
          .info-item
            .info-label ACCOUNT STATUS
            .info-value.info-value-success Active
          .info-item
            .info-label PASSWORD STRENGTH
            .info-value= @password_strength[:level].capitalize
      %h3.section-title Account Actions
      .info-card
        .info-grid
          .info-item
            .info-label PASSWORD
            .info-value
              = link_to "/change-password", class: "info-link" do
                Change Password
          .info-item
            .info-label PROFILE
            .info-value
              = link_to "/profile", class: "info-link" do
                Edit Profile
          .info-item
            .info-label ACCOUNT
            .info-value
              = link_to "/account-settings", class: "info-link" do
                Account Settings
          .info-item
            .info-label SESSION
            .info-value
              = button_to rodauth.logout_path, method: :post, class: "info-button" do
                Sign Out
      %h3.section-title Compliance Options
      .info-card
        .info-grid
          .info-item
            .info-label PRIVACY POLICY
            .info-value
              = link_to privacy_policy_path, class: "info-link" do
                View Privacy Policy
          .info-item
            .info-label COOKIE POLICY
            .info-value
              = link_to cookie_policy_path, class: "info-link" do
                View Cookie Policy
          .info-item
            .info-label REVIEW CONSENT
            .info-value
              = link_to "/consent", class: "info-link" do
                Review Consent
          .info-item
            .info-label EXPORT DATA
            .info-value
              = link_to account_export_path, class: "info-link" do
                Export Data
          .info-item
            .info-label DELETE ACCOUNT
            .info-value
              = button_to account_destroy_path, method: :delete, class: "info-button", data: { turbo_confirm: "Are you sure? This cannot be undone." } do
                Delete Account
          .info-item
