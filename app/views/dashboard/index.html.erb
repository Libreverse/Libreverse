<%= render "layouts/sidebar" %>
<%= render "layouts/drawer" %>
<%= render 'layouts/leniswrapper' do %>
  <%= render 'layouts/navigationshortcutswrapper' do %>
    <% include_stylesheet "dashboard" %>

    <div class="container py-5 dashboard-container">
      <div class="row">
        <div class="col-md-12">
          <div class="card shadow-sm mb-4 dashboard-card">
            <div class="card-header text-white dashboard-header">
              <h1 class="h3 mb-0">Dashboard</h1>
            </div>
            <div class="card-body p-4">
              <div class="welcome-section">
                <h2 class="h4 mb-3">Welcome, <%= @account.username %></h2>
                <p class="text-muted mb-0">You are logged in to your secure account dashboard. Manage your experiences and account settings from here.</p>
              </div>

              <div class="row mt-4">
                <div class="col-md-6">
                  <h3 class="h5 mb-3">
                    <i class="bi bi-person-badge me-2"></i>
                    Account Information
                  </h3>
                  <div class="info-card">
                    <div class="mb-3">
                      <div class="text-muted small">USERNAME</div>
                      <div class="stat-value"><%= @account.username %></div>
                    </div>
                    <div class="mb-0">
                      <div class="text-muted small">ACCOUNT CREATED</div>
                      <div class="stat-value"><%= @account_created_at %></div>
                    </div>
                  </div>
                  
                  <div class="info-card">
                    <div class="mb-3">
                      <div class="text-muted small">LAST LOGIN</div>
                      <div class="stat-value"><%= @last_login_at %></div>
                    </div>
                    <div class="mb-0">
                      <div class="text-muted small">ACCOUNT STATUS</div>
                      <div><span class="badge bg-success rounded-pill px-3 py-2">Active</span></div>
                    </div>
                  </div>
                </div>
                
                <div class="col-md-6">
                  <h3 class="h5 mb-3">
                    <i class="bi bi-shield-lock me-2"></i>
                    Password Security
                  </h3>
                  <div class="info-card">
                    <div class="mb-3">
                      <div class="text-muted small">PASSWORD STRENGTH</div>
                      <div>
                        <span class="badge <%= @password_strength[:class] %> rounded-pill px-3 py-2"><%= @password_strength[:level].capitalize %></span>
                        <div class="small text-muted mt-1"><%= @password_strength[:message] %></div>
                      </div>
                    </div>

                    <% if @password_age %>
                      <div class="mb-3">
                        <div class="text-muted small">PASSWORD AGE</div>
                        <% if @password_warning %>
                          <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill text-warning me-2"></i>
                            <span class="text-warning"><%= @password_age %> days old</span>
                          </div>
                          <div class="small text-warning mt-1">Consider changing your password regularly for better security.</div>
                        <% else %>
                          <div class="stat-value"><%= @password_age %> days old</div>
                        <% end %>
                      </div>
                    <% end %>

                    <div class="mt-3">
                      <%= link_to "/change-password", class: "btn btn-outline-primary btn-sm d-inline-flex align-items-center" do %>
                        <i class="bi bi-key me-2"></i> Change Password
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>

              <h3 class="h5 mb-3 mt-4">
                <i class="bi bi-shield-check me-2"></i>
                Security Recommendations
              </h3>
              <div class="row">
                <div class="col-md-12">
                  <div class="security-item">
                    <i class="bi bi-check-circle-fill text-success"></i>
                    Use a strong, unique password for your account
                  </div>
                  <div class="security-item">
                    <i class="bi bi-check-circle-fill text-success"></i>
                    Change your password regularly
                  </div>
                  <div class="security-item">
                    <i class="bi bi-check-circle-fill text-success"></i>
                    Never share your password with others
                  </div>
                  <div class="security-item">
                    <i class="bi bi-check-circle-fill text-success"></i>
                    Sign out when using shared devices
                  </div>
                </div>
              </div>

              <h3 class="h5 mb-3 mt-4">
                <i class="bi bi-app-indicator me-2"></i>
                Quick Links
              </h3>
              <div class="row quick-links-section">
                <div class="col-md-12">
                  <div class="list-group">
                    <%= link_to experiences_path, class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
                      <div class="d-flex align-items-center">
                        <i class="bi bi-journal-richtext me-3"></i>
                        <span>Manage Experiences</span>
                      </div>
                      <span class="badge bg-primary rounded-pill">
                        <i class="bi bi-arrow-right"></i>
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <div class="card-footer p-3 d-flex justify-content-between align-items-center">
              <div class="small text-muted">Last updated: <%= Time.now.strftime("%B %d, %Y at %H:%M") %></div>
              <%= button_to rodauth.logout_path, method: :post, class: "btn btn-danger" do %>
                <i class="bi bi-box-arrow-right me-2"></i> Sign out
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
