<div class="sp-bg">
  <%= image_tag("brasserie.jpg", loading: "eager", decoding: "async") %>
</div>
<div class="sp-centerify">
  <div class="sp-main">
      <span class="large">Search Experiences</span>
      <span class="small">Search<br />Experiences</span>
  </div>
  
  <%= form_tag(search_path, class: 'sp-search-bar', method: :get, data: { controller: "search", action: "input->search#updateSearch" }) do %>
    <%= text_field_tag :search, params[:search], 
                      placeholder: "Search experiences...", 
                      data: { search_target: "query" } %>
  <% end %>

  <%= turbo_frame_tag :experiences_list, data: { search_target: "results" } do %>
    <%= render partial: 'experiences_list', locals: { experiences: @experiences } %>
  <% end %>
  
</div>