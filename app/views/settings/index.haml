= render "layouts/sidebar"

= render "layouts/leniswrapper" do
  = render "layouts/navigationshortcutswrapper" do
    .administrative-background{"data-controller" => "parallax-background", "data-scroll" => "", "data-scroll-speed" => "-3"}
    .dashboard-container
      .dashboard-header-section
        %h1.display-heading= t('settings.index.title')
        %p.header-description
          = t('settings.index.description')
        %h3.section-title= t('settings.index.language')
      .language-picker-board.glass.glass-card-base{ data: { controller: 'language-picker' } }
        - I18n.available_locales.each do |locale|
          - flag = locale_flag_emoji(locale)
          - is_current = I18n.locale == locale
          %span.language-flag{ data: { action: 'click->language-picker#select', locale: locale }, class: (is_current ? 'selected' : '') }
            = flag
      .oneko-skin-picker-board.glass.glass-card-base{ data: { controller: 'oneko-skin-picker' } }
        %h3.section-title= t('settings.index.oneko_skin')
        - available_skins = %w[default black gray pride valentine fox bunny ghost spirit silver trans]
        - current_skin = current_oneko_skin
        - available_skins.each do |skin|
          - is_current = current_skin == skin
          %span.oneko-skin-option{ data: { action: 'click->oneko-skin-picker#select', skin: skin }, class: (is_current ? 'selected' : '') }
            = skin.titleize