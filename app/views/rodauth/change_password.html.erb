<%= render "layouts/sidebar" %>
<%= render "layouts/drawer" %>
<%= render 'layouts/leniswrapper' do %>
  <%= render 'layouts/navigationshortcutswrapper' do %>
    <% include_stylesheet "changepassword" %>
    <% content_for :fontpreloads do %>
      <link
        rel="preload"
        href="<%= vite_asset_path '~/fonts/Hack-Regular.woff2' %>"
        as="font"
        type="font/woff2"
        crossorigin
      >
    <% end %>

    <div class="login-bg" role="presentation"></div>
    <div class="lamp-effect-wrapper">
      <div class="lamp-effect">
        <div class="lamp-left-beam"></div>
        <div class="lamp-right-beam"></div>
        <div class="lamp-center-glow"></div>
        <div class="lamp-line"></div>
      </div>

      <div class="login-container">
        <div class="login-card">
          <div class="login-header">
            <h1>Change Password</h1>
            <p>Update your password</p>
          </div>

          <%= form_with url: rodauth.change_password_path, method: :post, class: "login-form", 
                        data: { 
                          controller: "form-auto-submit", 
                          form_auto_submit_target: "form",
                          form_auto_submit_min_password_length_value: "12"
                        } do |form| %>
            <% if rodauth.change_password_requires_password? %>
              <div class="login-form-group">
                <%= form.label "password", rodauth.password_label, class: "login-form-label" %>
                <%= form.text_field rodauth.password_param,
                    id: "password",
                    autocomplete: "current-password",
                    required: true,
                    class: "login-form-control #{"is-invalid" if rodauth.field_error(rodauth.password_param)}",
                    data: { form_auto_submit_target: "input" } %>
                <%= if rodauth.field_error(rodauth.password_param)
                  content_tag(:span, rodauth.field_error(rodauth.password_param), class: "login-invalid-feedback")
                end %>
              </div>
            <% end %>

            <div class="login-form-group">
              <%= form.label "new-password", rodauth.new_password_label, class: "login-form-label" %>
              <%= form.text_field rodauth.new_password_param,
                  id: "new-password",
                  autocomplete: "new-password",
                  required: true,
                  class: "login-form-control #{"is-invalid" if rodauth.field_error(rodauth.new_password_param)}",
                  data: { form_auto_submit_target: "input" } %>
              <%= if rodauth.field_error(rodauth.new_password_param)
                content_tag(:span, rodauth.field_error(rodauth.new_password_param), class: "login-invalid-feedback")
              end %>
              <small class="login-form-text text-muted">Password must be at least 12 characters long</small>
            </div>

            <% if rodauth.require_password_confirmation? %>
              <div class="login-form-group">
                <%= form.label "password-confirm", rodauth.password_confirm_label, class: "login-form-label" %>
                <%= form.text_field rodauth.password_confirm_param,
                    id: "password-confirm",
                    autocomplete: "new-password",
                    required: true,
                    class: "login-form-control #{"is-invalid" if rodauth.field_error(rodauth.password_confirm_param)}",
                    data: { form_auto_submit_target: "input" } %>
                <%= if rodauth.field_error(rodauth.password_confirm_param)
                  content_tag(:span, rodauth.field_error(rodauth.password_confirm_param), class: "login-invalid-feedback")
                end %>
              </div>
            <% end %>

            <div class="login-form-group">
              <%= form.submit "Change Password", class: "login-form-button" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
