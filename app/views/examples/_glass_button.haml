-# Example: Glass Button Component
-# Usage: Add this for standalone glass buttons

%button{data: {
          controller: "glass-button",
          "enable-glass-value": true,
          "glass-type-value": "pill",
          "border-radius-value": 25,
          "tint-opacity-value": 0.15,
          "component-type-value": "button",
          "corner-rounding-value": "all",
          "button-text-value": text,
          "button-path-value": path,
          "button-method-value": method || "get"
        },
        class: "glass-component glass-button-base"}
  .button-contents
    - if icon
      = raw svg_icon_data_url(icon)
    - if text
      %span= text
