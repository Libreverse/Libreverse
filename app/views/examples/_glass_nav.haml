-# Example: Glass Navigation Bar
-# Usage: Add this to your layout or any view

- nav_items = [
  { path: '/', icon: 'home', label: 'Home', svg: svg_icon_data_url('home') },
  { path: '/about', icon: 'info', label: 'About', svg: svg_icon_data_url('info') },
  { path: '/contact', icon: 'mail', label: 'Contact', svg: svg_icon_data_url('mail') }
]

%nav{data: { 
       controller: "nav",
       "enable-glass-value": true,
       "glass-type-value": "rounded",
       "border-radius-value": 10,
       "tint-opacity-value": 0.12,
       "component-type-value": "nav",
       "corner-rounding-value": "all",
       "nav-items": nav_items.to_json
     },
     class: "glass-component glass-nav"}
  .nav-contents
    - nav_items.each do |item|
      = link_to item[:path], class: "nav-link #{'current' if current_page?(item[:path])}" do
        = raw item[:svg]
        %span= item[:label]
