<div class="experience-actions d-flex flex-wrap gap-2">
  <%= link_to display_experience_path(experience), class: "btn btn-success" do %>
    <i class="fas fa-play"></i>
    View Experience
  <% end %>

  <%= link_to multiplayer_experience_path(experience), class: "btn btn-info" do %>
    <i class="fas fa-users"></i>
    Multiplayer Mode
  <% end %>

  <%= link_to edit_experience_path(experience), class: "btn btn-primary" do %>
    <i class="fas fa-edit"></i>
    Edit Experience
  <% end %>

  <%= button_to experience_path(experience), method: :delete, 
      class: "btn btn-danger", 
      form: { data: { turbo_confirm: "Are you sure you want to delete this experience? This action cannot be undone." } } do %>
    <i class="fas fa-trash"></i>
    Delete Experience
  <% end %>

  <%= link_to experiences_path, class: "btn btn-outline-secondary" do %>
    <i class="fas fa-arrow-left"></i>
    Back to Experiences
  <% end %>
</div>
