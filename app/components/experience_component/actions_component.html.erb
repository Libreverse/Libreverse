<div class="experience-actions d-flex flex-wrap gap-2">
  <%= link_to display_experience_path(experience), class: "btn btn-success d-flex flex-column align-items-center text-center gap-1" do %>
    <i class="fas fa-play fa-lg" aria-hidden="true"></i>
    <span class="d-block">View Experience</span>
  <% end %>

  <%= link_to multiplayer_experience_path(experience), class: "btn btn-info d-flex flex-column align-items-center text-center gap-1" do %>
    <i class="fas fa-users fa-lg" aria-hidden="true"></i>
    <span class="d-block">Multiplayer Mode</span>
  <% end %>

  <%= link_to edit_experience_path(experience), class: "btn btn-primary d-flex flex-column align-items-center text-center gap-1" do %>
    <i class="fas fa-edit fa-lg" aria-hidden="true"></i>
    <span class="d-block">Edit Experience</span>
  <% end %>

  <%= button_to experience_path(experience), method: :delete, 
      class: "btn btn-danger d-flex flex-column align-items-center text-center gap-1", 
      form: { data: { turbo_confirm: "Are you sure you want to delete this experience? This action cannot be undone." } } do %>
    <i class="fas fa-trash fa-lg" aria-hidden="true"></i>
    <span class="d-block">Delete Experience</span>
  <% end %>

  <%= link_to experiences_path, class: "btn btn-outline-secondary d-flex flex-column align-items-center text-center gap-1" do %>
    <i class="fas fa-arrow-left fa-lg" aria-hidden="true"></i>
    <span class="d-block">Back to Experiences</span>
  <% end %>
</div>
