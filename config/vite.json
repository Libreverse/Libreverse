{
    "all": {
        "sourceCodeDir": "app",
        "additionalEntrypoints": [
            "~/images/**/*",
            "~/emoji/**/*",
            "~/fonts/**/*",
            "~/icons/**/*",
            "~/static/**/*",
            "~/stylesheets/application.scss"
        ]
    },
    "development": {
        "autoBuild": true,
        "publicOutputDir": "vite-dev",
        "port": 3001,
        "skipProxy": true
    },
    "test": {
        "autoBuild": true,
        "publicOutputDir": "vite-test",
        "port": 3002
    }
}
