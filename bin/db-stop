#!/usr/bin/env bash
# Stop development databases

echo "Stopping development databases..."

# Stop TiDB
echo "Stopping TiDB..."
podman stop libreverse-dev-tidb >/dev/null 2>&1 || true

# Stop DragonflyDB
echo "Stopping DragonflyDB..."
podman stop libreverse-dev-dragonflydb >/dev/null 2>&1 || true

echo "Databases stopped."