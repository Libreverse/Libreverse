#!/usr/bin/env sh
# Simplified dev launcher: run all development processes from the single Procfile.
# (Merged Shakapacker + Vite + jobs + ancillary services.)

if ! command -v foreman >/dev/null 2>&1; then
  echo "Installing foreman..." >&2
  gem install foreman >/dev/null
fi

exec foreman start -f Procfile "$@"
